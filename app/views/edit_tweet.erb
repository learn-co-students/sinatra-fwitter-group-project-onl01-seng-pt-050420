<!doctype html>
<html>
  <head>
    <title>Fwitter</title>
  </head>
  <body>

    <div class="container">
      <h1>Tweets</h1>
    </div>

    <h1><%=@tweet.content%></h1>

    <div class="container">
      <h1>Update Tweet!</h1>
    </div>

    <form action="/tweets/<%= @tweet.id %>" method="POST">
      <label>Content:</label>

      <br><br>
      <input type="text" name="content" id="content">

      <input id="hidden" type="hidden" name="_method" value="patch">
      <input type="submit" value="submit">
    </form>

  </body>
</html>